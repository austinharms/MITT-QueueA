@model MITT_QueueA.Models.Comment
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("AddComment", "Main"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.AnswerId)
        @Html.HiddenFor(model => model.QuestionId)

        <div class="form-horizontal">
            <h6>Add Comment:</h6>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>

            <input type="submit" value="Post" class="btn btn-default" />
            Q: @Model.QuestionId
            A: @Model.AnswerId
        </div>
    }
}
else
{
    <p>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) to add Comments</p>
}